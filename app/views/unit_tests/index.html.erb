<div class="row">
  <div class="small-12 small-centered columns">

    <div class="row">
      <div class="small-6 columns">
        <h1>Listing Unit Tests</h1>
      </div>
      <div class="small-6 columns">      
        <%= link_to 'New Unit Test', new_unit_test_path, class: "button right" %>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="small-12 columns">
        <table width="100%">
          <thead>
            <tr>
              <th width="8%">Status</th>
              <th width="12%">Title</th>
              <th width="65%">Description</th>
              <th width="5%"></th>
              <th width="4%"></th>
              <th width="6%"></th>
            </tr>
          </thead>

          <tbody>
            <% @unit_tests.each do |unit_test| %>
              <tr>
                <td><% if unit_test.status == false %>
                      <label class="alert label">Pending</label>
                    <% else %>
                      <label class="success label">Approved</label>
                    <% end %>
                </td>
                <td><%= link_to unit_test.title, unit_test_path(unit_test) %></td>
                <td><%= unit_test.description %></td>
                <td><%= link_to 'Show', unit_test %></td>
                <td><%= link_to 'Edit', edit_unit_test_path(unit_test) %></td>
                <td><%= link_to 'Destroy', unit_test, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
