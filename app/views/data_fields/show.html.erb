<div class="row">
  <div class="small-12 columns">

    <nav class="top-bar" data-topbar>
      <section class="top-bar-section">
        <!-- Left Nav Section -->
        <ul class="left">
          <li class="has-form"><%= link_to 'Edit', edit_data_field_path(@data_field), class: "info button" %></li> 
          <li class="divider"></li>
          <li class="has-form"><%= link_to 'Delete', @data_field , method: :delete, class: "alert button" %></li>
          <li class="divider"></li> 
        </ul>
        <ul class="right">
          <li class="has-form"><a href="#" data-reveal data-reveal-id="addClass" class="button success">Add Class</a></li>
        </ul>
      </section>
    </nav>

    <div class="row">
      <div class="small-12 columns panel">
        <h4>DATA FIELD </h4><br>
        <table width="100%">
          <tbody>
              <tr>
                <td width="150px"><strong>Name</strong></td>
                <td><%= @data_field.name %></td>
              </tr>
              <tr>
                <td width="150px"><strong>Visibility</strong></td>
                <td><%= @data_field.visibility %></td>
              </tr>
              <tr>
                <td width="150px"><strong>Type</strong></td>
                <td><%= @data_field.data_type %></td>
              </tr>
              <tr>
                <td width="150px"><strong>Description</strong></td>
                <td> <%= @data_field.description %></td>
              </tr>
              <tr>
                <td width="150px"><strong>Used by class:</strong></td>
                <td> <%= link_to @data_field.unit.title, @data_field.unit %></td>
              </tr>
          </tbody>
        </table>
      </div>
    </div>
    <br>
    <%= link_to '<--Back', data_fields_path %>
  </div>
</div>
