<div class="row">
  <div class="small-12 small-centered columns">

    <div class="row">
      <div class="small-6 columns">
        <h1>Listing Components</h1>
      </div>
      <div class="small-6 columns">      
        <%= link_to 'New Component', new_component_path, class: "button right" %>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="small-12 columns">
        <label><strong>FRONT_END</strong></label>
        <table width="100%">
          <thead>
            <tr>
              <th>Title</th>
              <th>Description</th>
              <th></th>
              <th></th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% @frontend.each do |component| %>
              <tr>
                <td><%= link_to component.title, component_path(component) %></td>
                <td><%= component.description %></td>
                <td><%= link_to 'Show', component %></td>
                <td><%= link_to 'Edit', edit_component_path(component) %></td>
                <td><%= link_to 'Destroy', component, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <br>
        <div class="row">
      <div class="small-12 columns">
        <label><strong>BACK_END</strong></label>
        <table width="100%">
          <thead>
            <tr>
              <th>Title</th>
              <th>Description</th>
              <th></th>
              <th></th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% @backend.each do |component| %>
              <tr>
                <td><%= link_to component.title, component_path(component) %></td>
                <td><%= component.description %></td>
                <td><%= link_to 'Show', component %></td>
                <td><%= link_to 'Edit', edit_component_path(component) %></td>
                <td><%= link_to 'Destroy', component, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <br>
    <% if !@other.empty? %>  
      <div class="row">
        <div class="small-12 columns">
          <label><strong>OTHER COMPONENTS</strong></label>
          <table width="100%">
            <thead>
              <tr>
                <th>Title</th>
                <th>Description</th>
                <th></th>
                <th></th>
                <th></th>
              </tr>
            </thead>

            <tbody>
              <% @other.each do |component| %>
                <tr>
                  <td><%= link_to component.title, component_path(component) %></td>
                  <td><%= component.description %></td>
                  <td><%= link_to 'Show', component %></td>
                  <td><%= link_to 'Edit', edit_component_path(component) %></td>
                  <td><%= link_to 'Destroy', component, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    <% end %>
  </div>
</div>
