<%= simple_form_for(@component) do |f| %>
  <%= f.error_notification %>

  <%= f.hidden_field :ancestry %>

  <div class="form-inputs">
    <div class="row collapse">
      <div class="small-4 columns">
        <label><strong>PREFIX</strong></label>
        <span class="prefix"><%= @prefix %></span>
      </div>
      <div class="small-8 columns">
        <label><strong>TITLE</strong></label>
        <%= f.input :title, label: false %>
      </div>
    </div>
    <label><strong>DESCRIPTION</strong></label>
    <%= f.input :description, label: false %>
    <label><strong>USE</strong></label>
    <%= f.input :use, label: false %>
    <label><strong>GRAPH</strong></label>
    <%= f.input :graph, label: false %>
    
    <% if params[:parent_id].nil? %>
      <label><strong>PARENT</strong></label>    
      <%= f.collection_select(:parent_id, Component.all, :id, :full_title) %>
    <% end %>
  </div>
  <br>
  <div class="form-actions">
    <%= f.button :submit, class: "button" %>
  </div>
<% end %>
