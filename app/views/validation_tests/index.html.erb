<div class="row">
  <div class="small-12 small-centered columns">

    <div class="row">
      <div class="small-6 columns">
        <h1>Listing Validation Test</h1>
      </div>
      <div class="small-6 columns">      
        <%= link_to 'New Validation Test', new_validation_test_path, class: "button right" %>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="small-12 columns">
        <table>
          <thead>
            <tr>
              <th>Title</th>
              <th>Status</th>
              <th>Description</th>
              <th></th>
              <th></th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% @validation_tests.each do |validation_test| %>
              <tr>
                <td><%= validation_test.title %></td>
                <td><%= validation_test.status %></td>
                <td><%= validation_test.description %></td>
                <td><%= link_to 'Show', validation_test %></td>
                <td><%= link_to 'Edit', edit_validation_test_path(validation_test) %></td>
                <td><%= link_to 'Destroy', validation_test, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
